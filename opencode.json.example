{
  "$schema": "https://opencode.ai/config.json",
  "server": {
    "hostname": "0.0.0.0",
    "port": 4000,
    "mdns": false
  },
  "model": "{env:OPENCODE_MODEL}",
  "small_model": "{env:OPENCODE_SMALL_MODEL}",
  "theme": "",
  "autoupdate": true,
  "share": "manual",
  "provider": {
    "anthropic": {
      "options": {
        "timeout": 300000,
        "apiKey": "{env:ANTHROPIC_API_KEY}"
      }
    },
    "openai": {
      "options": {
        "timeout": 300000,
        "apiKey": "{env:OPENAI_API_KEY}"
      }
    },
    "gemini": {
      "options": {
        "timeout": 300000,
        "apiKey": "{env:GEMINI_API_KEY}"
      }
    },
    "amazon-bedrock": {
      "options": {
        "region": "us-east-1"
      }
    },
    "vertex": {
      "options": {
        "timeout": 300000,
        "projectId": "{env:GOOGLE_CLOUD_PROJECT}",
        "apiKey": "{env:GOOGLE_API_KEY}"
      }
    },
    "openrouter": {
      "options": {
        "timeout": 300000,
        "apiKey": "{env:OPENROUTER_API_KEY}"
      }
    }
  },
  "tools": {
    "bash": true,
    "write": true,
    "edit": true
  },
  "watcher": {
    "ignore": [
      "node_modules/**",
      "dist/**",
      ".git/**",
      "**/*.min.js"
    ]
  }
}
